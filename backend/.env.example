PORT=5000
NODE_ENV=development

# Mongo
MONGO_URI=mongodb://127.0.0.1:27017/hirehelper

# JWT
JWT_SECRET=replace_me_with_a_long_random_secret
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# OTP (used to hash OTP codes before storing)
OTP_PEPPER=replace_me_with_random_secret

# SMTP (optional; used to email OTP codes)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username_here
SMTP_PASS=your_smtp_password_here
SMTP_FROM="HireHelper <no-reply@hirehelper.local>"

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here
CLOUDINARY_FOLDER=hirehelper/tasks

